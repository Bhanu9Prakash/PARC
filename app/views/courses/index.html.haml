%h3
  .text-center
    Courses
    .badge.badge-info
      = @courses.count
  
.row
  .col-md-2
    .form-inline
      = search_form_for @ransack_courses, as: :courses_search, url: courses_path do |f|
        = f.label :title
        = f.search_field :title_cont, placeholder: 'Title'
        = f.label :description
        = f.search_field :short_description_cont, placeholder: 'Description'
        = f.label :language
        = f.select :language_cont, Course.languages, include_blank: true
        = f.label :level
        = f.select :level_cont, Course.levels, include_blank: true
        = f.label :price
        = f.search_field :price_eq, placeholder: 'Price'
        %br
        = f.submit
      .ml-2
      = link_to 'refresh', courses_path
      

  .col-md-10
    .card-columns
      - @courses.each do |course|
        = render 'courses/course', course: course

%br

